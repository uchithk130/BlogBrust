<%- include("header") -%>

<style>
  body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: #333;
        background: linear-gradient(180deg, #ecf0f1 0%, #fff 100%); /* Updated background color */
    }
  .compose-container {
    max-width: 600px;
    margin: auto;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    padding: 30px;
    box-sizing: border-box;
    overflow: hidden;
    animation: fadeInUp 0.8s ease-out;
  }

  h1 {
    text-align: center;
    color: #343a40;
    margin-bottom: 20px;
  }

  form {
    display: flex;
    flex-direction: column;
  }

  label {
    font-size: 18px;
    margin-top: 10px;
    color: #495057;
  }

  input,
  textarea,
  button {
    margin-bottom: 20px;
    padding: 12px;
    font-size: 16px;
    border: 1px solid #ced4da;
    border-radius: 5px;
    box-sizing: border-box;
    width: 100%;
    transition: border-color 0.3s;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: #007bff;
  }

  button {
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  button:hover {
    background-color: #0056b3;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<div class="compose-container">
  <h1>Compose</h1>
  <form action="/compose" method="post" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="Not more than 30 characters">

    <label for="content">Description</label>
    <textarea name="content" id="content" rows="7"></textarea>

    <label for="images">Upload Image</label>
    <input type="file" name="images" id="images" accept="image/*" multiple>

    <label for="pdfs">Upload PDF</label>
    <input type="file" name="pdfs" id="pdfs" accept=".pdf" multiple>

    <label for="links">Links (Separate with commas)</label>
    <input type="text" name="links" id="links" placeholder="e.g., https://example.com, https://anotherlink.com">

    <button type="submit" name="button">Publish</button>
  </form>
</div>

<%- include("footer") -%>
